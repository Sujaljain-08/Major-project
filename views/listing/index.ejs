<% layout("layout/boilerplate")%>
    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-5 m-4">
        <%for (listing of all_listing){%>
            <div class="col">
            <a href="/listing/<%=listing.id%>">
                    <div class="card">
                        <img src=<%=listing.image.url%> class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%=listing.title%></h5>
                          <p class="card-text"><%=listing.description%></p>
                          <p>Price: &#8377;<%=listing.price.toLocaleString('en-IN')%></p>
                          <a href="listing/<%=listing.id%>" class="btn btn-outline-primary">Explore</a>
                        </div>
                    </div>
            </a>
            </div>
        <%}%>
    </div>